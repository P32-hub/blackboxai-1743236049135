<%- include('partials/header') %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-8 mx-auto text-center">
      <h1 class="display-4 mb-4">Amazon Voucher Marketplace</h1>
      <p class="lead mb-5">Buy and sell Amazon shopping vouchers securely using PayTM or Amazon Pay</p>
      
      <div class="d-grid gap-3 d-sm-flex justify-content-sm-center mb-5">
        <a href="/auth/register" class="btn btn-primary btn-lg px-4 gap-3">Get Started</a>
        <a href="/vouchers" class="btn btn-outline-secondary btn-lg px-4">Browse Vouchers</a>
      </div>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% vouchers.forEach(voucher => { %>
      <div class="col">
        <div class="card h-100 voucher-card">
          <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">â‚¹<%= voucher.amount %></h5>
          </div>
          <div class="card-body">
            <p class="text-muted mb-2">Voucher Code: <strong><%= voucher.code %></strong></p>
            <p class="text-muted mb-3">Expires: <%= new Date(voucher.expiryDate).toLocaleDateString() %></p>
            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-success"><%= voucher.status %></span>
              <a href="/vouchers/<%= voucher._id %>" class="btn btn-sm btn-primary">View Details</a>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('partials/footer') %>